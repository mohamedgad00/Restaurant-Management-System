<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.projectfx.controller.MenuController"
      spacing="15"
      style="-fx-padding: 20;"
      stylesheets="@../styles/styles.css">

    <!-- Header and Add Button -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="ðŸ½ï¸ Menu Management" styleClass="header-label"/>
    </HBox>

    <!-- TableView with fx:id -->
    <TableView fx:id="menuTable" VBox.vgrow="ALWAYS"/>

    <!-- Filters -->
    <HBox spacing="10">
        <ComboBox fx:id="typeFilter" promptText="Filter by type" />
        <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS"/>
        <Button text="Search" onAction="#searchItems" styleClass="btn-primary"/>
    </HBox>

    <!-- Form to add new MenuItem -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">
        <TextField fx:id="nameField" promptText="Name" />
        <ComboBox fx:id="typeField" promptText="Type" />
        <TextField fx:id="priceField" promptText="Price" />
        <Button text="Add Item" onAction="#addNewItemFromForm" styleClass="btn-primary" />
    </HBox>
</VBox>
